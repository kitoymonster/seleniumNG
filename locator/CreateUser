	// failed notification
	public static List<WebElement> invalidUserDetailMessages(WebDriver driver) throws InterruptedException {
		TraceLog.start("CreateUser.invalidUserDetailMessages");
		
		List<WebElement> elements =  GetElementsBy.byXpath(driver, "//*[@class='ui error message']/*[@class='list']/li");

