
import java.util.List;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
public class CreateUser {
	public static WebElement element = null;
	public static List<WebElement> elements = null;

	// user management - registration
	public static WebElement registrationTab(WebDriver driver) throws InterruptedException {
		TraceLog.start("CreateUser.registrationTab");
		
		element = GetElementBy.byXpath(driver, "/html/body/div[1]/div[1]/div[1]/div[4]/ul/li[1]/a");

		TraceLog.ended("CreateUser.registrationTab");
		return element;
	}
	
	// username
	public static WebElement firstName(WebDriver driver) throws InterruptedException {
		TraceLog.start("CreateUser.firstname");
		
		element = GetElementBy.byName(driver, "firstName");

		TraceLog.ended("CreateUser.firstname");
		return element;
	}
	
